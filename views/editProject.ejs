<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Project: <%= project.title %> â€¢ Climate Solutions</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body class="min-h-screen bg-base-100 text-base-content">
    <%- include('partials/navbar') %>

    <main class="mx-auto max-w-2xl px-6 py-16">
        <header class="mb-8">
            <h1 class="text-4xl font-bold">Edit Project</h1>
            <p class="text-base-content/70 mt-2">Editing: <%= project.title %></p>
        </header>

        <form action="/solutions/editProject" method="POST" class="space-y-6">
            <input type="hidden" name="id" value="<%= project.id %>">

            <div class="form-control w-full">
                <label class="label" for="title">
                    <span class="label-text font-semibold">Title</span>
                </label>
                <input type="text" id="title" name="title" value="<%= project.title %>" class="input input-bordered w-full" required />
            </div>

            <div class="form-control w-full">
                <label class="label" for="feature_img_url">
                    <span class="label-text font-semibold">Feature Image URL</span>
                </label>
                <input type="url" id="feature_img_url" name="feature_img_url" value="<%= project.feature_img_url %>" class="input input-bordered w-full" required />
            </div>

            <div class="form-control w-full">
                <label class="label" for="sector_id">
                    <span class="label-text font-semibold">Sector</span>
                </label>
                <select id="sector_id" name="sector_id" class="select select-bordered w-full" required>
                    <option value="" disabled>Select a Sector</option>
                    <% sectors.forEach(sector => { %>
                        <option value="<%= sector.id %>" <%= (project.sector_id == sector.id) ? "selected" : "" %>><%= sector.sector_name %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-control w-full">
                <label class="label" for="intro_short">
                    <span class="label-text font-semibold">Short Introduction</span>
                </label>
                <textarea id="intro_short" name="intro_short" class="textarea textarea-bordered h-24" required><%= project.intro_short %></textarea>
            </div>

            <div class="form-control w-full">
                <label class="label" for="summary_short">
                    <span class="label-text font-semibold">Summary</span>
                </label>
                <textarea id="summary_short" name="summary_short" class="textarea textarea-bordered h-32" required><%= project.summary_short %></textarea>
            </div>

            <div class="form-control w-full">
                <label class="label" for="impact">
                    <span class="label-text font-semibold">Impact</span>
                </label>
                <textarea id="impact" name="impact" class="textarea textarea-bordered h-24" required><%= project.impact %></textarea>
            </div>

            <div class="form-control w-full">
                <label class="label" for="original_source_url">
                    <span class="label-text font-semibold">Original Source URL</span>
                </label>
                <input type="url" id="original_source_url" name="original_source_url" value="<%= project.original_source_url %>" class="input input-bordered w-full" required />
            </div>

            <div class="flex gap-4 pt-4">
                <button type="submit" class="btn btn-primary flex-1 normal-case text-base">Update Project</button>
                <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error flex-1 normal-case text-base text-white" onclick="return confirm('Are you sure you want to delete this project?');">Delete Project</a>
            </div>
        </form>
    </main>
</body>
</html>
